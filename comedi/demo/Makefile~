printenv:
	$(CC) $(EXTRA) $@.c $(LIBS) -o $@

clean:
	rm -f *.o
	rm -rf .libs
	@list='$(noinst_PROGRAMS)'; for p in $$list; do \
	  rm -f $$p ; \
	done


